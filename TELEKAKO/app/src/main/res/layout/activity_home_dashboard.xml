<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/lightblue_700"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeDashboard">
    <include layout="@layout/toolbar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="-7dp"
            android:id="@+id/firstlinear"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="120dp"
                android:elevation="8dp"
                app:cardElevation="10dp"
                android:layout_height="120dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imagesave"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_save_24"
                        android:layout_height="70dp">
                    </ImageView>
                    <TextView
                        android:layout_below="@+id/imagesave"
                        android:layout_width="match_parent"
                        android:text="Start Saving"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                    </TextView>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
               android:layout_alignParentEnd="true"
                android:layout_width="120dp"
                android:layout_marginTop="20dp"
                android:elevation="8dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="80dp"
                app:cardBackgroundColor="@color/white"
                android:layout_height="120dp"
                android:layout_alignParentRight="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imagesave3"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_account_balance_wallet_24"
                        android:layout_height="70dp">
                    </ImageView>
                    <TextView
                        android:layout_below="@+id/imagesave3"
                        android:layout_width="match_parent"
                        android:text="My Savings"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/secondlinear"
            android:layout_below="@+id/firstlinear"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="-7dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="8dp"
                app:cardElevation="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_height="120dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imagesave4"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_baseline_account_balance_24"></ImageView>
                    <TextView
                        android:layout_below="@+id/imagesave4"
                        android:layout_width="match_parent"
                        android:text="About Saving"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                    </TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="50dp"
                android:id="@+id/card4"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="8dp"
                app:cardElevation="10dp"
                android:layout_marginLeft="80dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                android:layout_height="120dp"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imagesave5"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_supervised_user_circle_24"
                        android:layout_height="70dp">
                    </ImageView>
                    <TextView
                        android:layout_below="@+id/imagesave5"
                        android:layout_width="match_parent"
                        android:text="Advisors List"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                    </TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="-7dp"
            android:id="@+id/thirdlinear"
            android:layout_below="@+id/secondlinear"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="8dp"
                app:cardElevation="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_height="120dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/sett"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_baseline_settings_24"></ImageView>
                    <TextView
                        android:layout_below="@+id/sett"
                        android:layout_width="match_parent"
                        android:text="Settings"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                    </TextView>
                </RelativeLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="50dp"
                android:id="@+id/card6"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="8dp"
                app:cardElevation="10dp"
                android:layout_marginLeft="80dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                android:layout_height="120dp"
                android:layout_alignParentRight="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imagesave6"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_assignment_turned_in_24"
                        android:layout_height="70dp">
                    </ImageView>
                    <TextView
                        android:layout_below="@+id/imagesave6"
                        android:layout_width="match_parent"
                        android:text="Completed Goals"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                    </TextView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </RelativeLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:id="@+id/bottom_navigation"
            android:layout_alignParentBottom="true"
            app:menu="@menu/navigation"
            android:layout_height="wrap_content">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </RelativeLayout>



</LinearLayout>